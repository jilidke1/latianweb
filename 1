<body>    
    <form onsubmit="return ubahTombol(event)">
        <div class="form-input">
            <p class="header">FORMULIR INPUT PRODUK</p> 
            <p class="deskripsi-header">Silakan isi formulir di bawah ini untuk menambahkan produk baru ke dalam sistem.</p>  
                    
            <label for="nama">Nama Produk :</label>
            <input type="text" id="nama" required>

            <label for="deskripsi">Deskripsi Produk :</label>
            <textarea id="deskripsi" required></textarea>

            <label for="harga">Harga Produk :</label>
            <input id="harga" type="number" required>

            <label for="kategori">Kategori Produk :</label>
            <select id="kategori" required>
                <option value="">Pilih Kategori</option>
                <option value="elektronik">Elektronik</option>
                <option value="minuman">Minuman</option>
                <option value="pakaian">Pakaian</option>
                <option value="makanan">Makanan</option>
            </select>

            <label for="file-gambar">Unggah Gambar Produk :</label>
            <input id="file-gambar" type="file">

            <p class="error-message" id="error-msg">Harap isi semua kolom!</p>

            <button class="kirim-btn" id="kirim-btn" type="submit">Kirim</button>
        </div>
    </form>

    <div class="navbar">
        <a href="#">Nama Produk</a>
        <a href="#">Deskripsi Produk</a>
        <a href="#">Harga Produk</a>
        <a href="#">Kategori Produk</a>
    </div>

    <script>
        function ubahTombol(event) {
           
            var nama = document.getElementById("nama").value.trim();
            var deskripsi = document.getElementById("deskripsi").value.trim();
            var harga = document.getElementById("harga").value.trim();
            var kategori = document.getElementById("kategori").value.trim();
            var fileGambar = document.getElementById("file-gambar").value.trim();
            var button = document.getElementById("kirim-btn");
            var errorMsg = document.getElementById("error-msg");

          
            if (nama === "" || deskripsi === "" || harga === "" || kategori === "" ) {
                errorMsg.style.display = "block";  
                return false; 
            }

            errorMsg.style.display = "none";  // Sembunyikan pesan error jika sudah diisi semua

          

            // Ubah ke checkmark dan warna hijau sukses
            button.innerHTML = "&#10003;";
            button.style.backgroundColor = "#218838";

            setTimeout(function() {
                // Kembalikan teks dan warna awal
                button.innerHTML = "Kirim";
                button.style.backgroundColor = "#28a745";
                
            }, 3000);

            return false; // Mencegah form benar-benar dikirim
        }
    </script>
